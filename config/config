#--- General Settings ---
focus_follows_mouse no

#--- Gaps ---
gaps inner 3
gaps outer 0
for_window [class=".*"] border pixel 1

# Specific padding
workspace_layout default
workspace 1 output primary

#--- Workspace Naming ---
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

#--- Keybindings ---
set $mod Mod1

# Focus movement
bindsym $mod+h focus left
bindsym $mod+l focus right
bindsym $mod+k focus up
bindsym $mod+j focus down

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
bindsym $mod+Shift+k move up
bindsym $mod+Shift+j move down

# Resize window
mode "resize" {
    bindsym $mod+minus resize shrink width 10 px or 10 ppt
    bindsym $mod+equal resize grow width 10 px or 10 ppt
    bindsym $mod+Shift+equal resize grow height 10 px or 10 ppt
    bindsym $mod+Shift+minus resize shrink height 10 px or 10 ppt
    bindsym Return mode "default"
}
bindsym $mod+r mode "resize"

# Floating / tiling / fullscreen
bindsym $mod+Shift+f floating toggle
bindsym $mod+g fullscreen toggle

# Close window
bindsym $mod+Shift+w kill

# Reload / restart
bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec i3-msg exit

# Workspace navigation
bindsym $mod+v workspace prev
bindsym $mod+b workspace next
bindsym $mod+bracketleft workspace back_and_forth
bindsym $mod+1 workspace $ws1
bindsym $mod+c workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move window to workspace
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+c move container to workspace $ws7; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

# Move workspace to monitor
bindsym $mod+Left move workspace to output left
bindsym $mod+Right move workspace to output right

#--- Floating Window Behavior ---
for_window [window_role="pop-up"] floating enable
for_window [title="Picture-in-Picture"] floating enable

#--- Appearance ---
client.focused          #8dbcff #8dbcff #ffffff #8dbcff
client.unfocused        #a1a1a1 #a1a1a1 #888888 #a1a1a1

#--- Rofi launcher ---
bindsym $mod+d exec --no-startup-id rofi -show drun

#--- Terminal (wezerm) ---
bindsym $mod+Return exec wezterm

#--- Xmodmap ---
exec --no-startup-id xmodmap ~/.Xmodmap

#--- Polybar ---
exec --no-startup-id ~/.config/polybar/launch.sh

#--- For VPN ---
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1

#--- Notifications ---
exec --no-startup-id dunst
bindsym $mod+Shift+n exec --no-startup-id sh -c 'killall dunst; dunst &'

#--- Emojis ---
bindsym Mod4+period exec --no-startup-id ~/.config/rofi/emoji_pick.sh

#--- ðŸ¤« ---
exec --no-startup-id ~/personal/scripts/loop.sh

#--- Wallpaper ---
exec --no-startup-id feh --bg-scale ~/personal/bg.png
exec --no-startup-id picom --config ~/.config/picom/picom.conf

#--- Screenshots ---
bindsym Print exec flameshot gui
